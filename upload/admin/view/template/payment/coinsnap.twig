{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="float-end">
				<button type="submit" form="form-coinsnap" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
					<i class="fa-solid fa-save"></i>
				</button>
				<a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light">
					<i class="fa-solid fa-reply"></i>
				</a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ol class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li class="breadcrumb-item">
						<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
					</li>
				{% endfor %}
			</ol>
		</div>
	</div>
	<div class="container-fluid">
		<div class="alert alert-info">
			{{ coinsnap_logo}}
			{{ coinsnap_description }}
		</div>
		{% if error_warning %}
			<div class="alert alert-danger alert-dismissible">
				<i class="fa fa-exclamation-circle"></i>
				{{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<div class="card">
			<div class="card-header">
				<i class="fa-solid fa-pencil"></i>
				{{ text_edit }}
        
      </div>
			<div class="card-body">
				<form action="{{action}}" method="post" id="form-coinsnap" class="form-horizontal" data-oc-toggle="ajax">
                                    
                                    <div class="row mb-3">
				<label class="col-sm-2 col-form-label" for="input-provider" >{{ entry_provider }}</label>
				<div class="col-sm-10">
                                    <select name="payment_coinsnap_provider" id="input-provider" class="form-select">
					<option value="coinsnap" {% if 'coinsnap' == payment_coinsnap_provider %} selected="selected" {% endif %}>Coinsnap</option>
                                        <option value="btcpay" {% if 'btcpay' == payment_coinsnap_provider %} selected="selected" {% endif %}>BTCPay server</option>
                                    </select>
				</div>
			  </div>

			<div class="row mb-3 coinsnap">
						<label class="col-sm-2 col-form-label" for="input-store-id">{{entry_store_id}}</label>
						<div class="col-sm-10">
				  			<input type="text" name="payment_coinsnap_store_id" value="{{payment_coinsnap_store_id}}" placeholder="{{help_store_id}}" id="input-store-id" class="form-control" />
							<small class="form-text text-muted">required</small>
				  			{% if error_store_id %}
					  			<div class="text-danger">{{error_store_id}}</div>
				  			{% endif %}
						</div>
			  		</div> 

					<div class="row mb-3 coinsnap">
						<label class="col-sm-2 col-form-label" for="input-store-id">{{entry_api_key}}</label>						
						<div class="col-sm-10">
				  		<input type="text" name="payment_coinsnap_api_key" value="{{payment_coinsnap_api_key}}" placeholder="{{help_api_key}}" id="input-api-key" class="form-control" />
						<small class="form-text text-muted">required</small>
				  		{% if error_api_key %}
					  		<div class="text-danger">{{error_api_key}}</div>
				  		{% endif %}
						</div>                
			  		</div>
                                                
                            <div class="row mb-3 btcpay">
						<label class="col-sm-2 col-form-label" for="input-btcpay-server-url">{{entry_btcpay_server_url}}</label>
						<div class="col-sm-10">
				  			<input type="text" name="payment_coinsnap_btcpay_server_url" value="{{payment_coinsnap_btcpay_server_url}}" placeholder="{{help_btcpay_server_url}}" id="input-btcpay_cerver_url" class="form-control" />
							<small class="form-text text-muted">required</small>
				  			{% if error_btcpay_server_url %}
					  			<div class="text-danger">{{error_btcpay_server_url}}</div>
				  			{% endif %}
						</div>
			  		</div> 
                                                
                            <div class="row mb-3 btcpay">
						<label class="col-sm-2 col-form-label" for="input-btcpay-store-id">{{entry_btcpay_store_id}}</label>
						<div class="col-sm-10">
				  			<input type="text" name="payment_coinsnap_btcpay_store_id" value="{{payment_coinsnap_btcpay_store_id}}" placeholder="{{help_btcpay_store_id}}" id="input-btcpay-store-id" class="form-control" />
							<small class="form-text text-muted">required</small>
				  			{% if error_btcpay_store_id %}
					  			<div class="text-danger">{{error_btcpay_store_id}}</div>
				  			{% endif %}
						</div>
			  		</div> 

					<div class="row mb-3 btcpay">
						<label class="col-sm-2 col-form-label" for="input-store-id">{{entry_btcpay_api_key}}</label>						
						<div class="col-sm-10">
				  		<input type="text" name="payment_coinsnap_btcpay_api_key" value="{{payment_coinsnap_btcpay_api_key}}" placeholder="{{help_btcpay_api_key}}" id="input-btcpay-api-key" class="form-control" />
						<small class="form-text text-muted">required</small>
				  		{% if error_btcpay_api_key %}
					  		<div class="text-danger">{{error_btcpay_api_key}}</div>
				  		{% endif %}
						</div>                
			  		</div>

                            <div class="row mb-3">
				<label class="col-sm-2 col-form-label" for="input-new-status" >{{ entry_new_status }}</label>
				<div class="col-sm-10">
					<select name="payment_coinsnap_new_status" id="input-new-status" class="form-select">
						{% for order_status in order_statuses %}
						<option value="{{ order_status.order_status_id }}" {% if order_status.order_status_id == payment_coinsnap_new_status %} selected="selected" {% endif %}>{{ order_status.name }}</option>
						{% endfor %}
					</select>
				</div>
			  </div>

			 <div class="row mb-3">
				<label class="col-sm-2 col-form-label" for="input-expired-status" >{{ entry_expired_status }}</label>
				<div class="col-sm-10">
					<select name="payment_coinsnap_expired_status" id="input-expired-status" class="form-select">
						{% for order_status in order_statuses %}
						<option value="{{ order_status.order_status_id }}" {% if order_status.order_status_id == payment_coinsnap_expired_status %} selected="selected" {% endif %}>{{ order_status.name }}</option>
						{% endfor %}
					</select>
				</div>
			  </div>	

			  <div class="row mb-3">
				<label class="col-sm-2 col-form-label" for="input-settled-status" >{{ entry_settled_status }}</label>
				<div class="col-sm-10">
					<select name="payment_coinsnap_settled_status" id="input-settled-status" class="form-select">
						{% for order_status in order_statuses %}
						<option value="{{ order_status.order_status_id }}" {% if order_status.order_status_id == payment_coinsnap_settled_status %} selected="selected" {% endif %}>{{ order_status.name }}</option>
						{% endfor %}
					</select>
				</div>
			  </div>	

			  <div class="row mb-3">
				<label class="col-sm-2 col-form-label" for="input-processing-status" >{{ entry_processing_status }}</label>
				<div class="col-sm-10">
					<select name="payment_coinsnap_processing_status" id="input-processing-status" class="form-select">
						{% for order_status in order_statuses %}
						<option value="{{ order_status.order_status_id }}" {% if order_status.order_status_id == payment_coinsnap_processing_status %} selected="selected" {% endif %}>{{ order_status.name }}</option>
						{% endfor %}
					</select>
				</div>
                          </div>

                                        <div class="row mb-3">
						<label for="input-autoredirect" class="col-sm-2 col-form-label">{{ entry_autoredirect }}</label>
						<div class="col-sm-10">
							<div class="form-check form-switch form-switch-lg">
								<input type="hidden" name="payment_coinsnap_autoredirect" value="0"/>
								<input type="checkbox" name="payment_coinsnap_autoredirect" value="1" id="input-status" class="form-check-input" {% if payment_coinsnap_autoredirect %} checked {% endif %}/>
							</div>
						</div>
					</div>
                                                        
                                        <div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="input-store-id">{{entry_returnurl}}</label>
						<div class="col-sm-10">
				  			<input type="text" name="payment_coinsnap_returnurl" value="{{payment_coinsnap_returnurl}}" placeholder="{{help_returnurl}}" id="input-store-id" class="form-control" />
						</div>
			  		</div>

					<div class="row mb-3">
						<label for="input-geo-zone" class="col-sm-2 col-form-label">{{ entry_geo_zone }}</label>
						<div class="col-sm-10">
							<select name="payment_coinsnap_payment_geo_zone_id" id="input-geo-zone" class="form-select">
								<option value="0">{{ text_all_zones }}</option>
								{% for geo_zone in geo_zones %}
									<option value="{{ geo_zone.geo_zone_id }}" {% if geo_zone.geo_zone_id == payment_coinsnap_payment_geo_zone_id %} selected="selected" {% endif %}>{{ geo_zone.name }}</option>
								{% endfor %}
							</select>
						</div>
					</div>

					<div class="row mb-3">
						<label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
						<div class="col-sm-10">
							<div class="form-check form-switch form-switch-lg">
								<input type="hidden" name="payment_coinsnap_status" value="0"/>
								<input type="checkbox" name="payment_coinsnap_status" value="1" id="input-status" class="form-check-input" {% if payment_coinsnap_status %} checked {% endif %}/>
							</div>
						</div>
					</div>

				<div class="row mb-3">
					<label for="payment_coinsnap_method_name" class="col-sm-2 col-form-label">{{ entry_method_name }}</label>					
					<div class="col-sm-10">
					  <input type="text" name="payment_coinsnap_method_name" value="{{payment_coinsnap_method_name}}" placeholder="{{help_method_name}}" id="payment_coinsnap_method_name" class="form-control" />
					</div>
			  	</div>

					<div class="row mb-3">
						<label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_sort_order }}</label>
						<div class="col-sm-10">
							<input type="text" name="payment_coinsnap_sort_order" value="{{ payment_coinsnap_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control"/>
						</div>
					</div>

         

				</form>
			</div>
		</div>
	</div>
</div>

{{ footer }}
